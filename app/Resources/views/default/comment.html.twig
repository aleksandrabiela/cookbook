{% extends 'base.html.twig' %}

{% block body %}
    <div class="well" style="text-align:center; max-width:300px; margin:10px auto">
        {{ message }}
        {{ form_start(CommentType) }}
        <br/>
        {{ form_widget(CommentType.content, {'attr': {'class': 'form-control register_field', 'placeholder': "tutaj wpisz komentarz"}} ) }}
        <br/>
        {{ form_widget(CommentType.zapisz, {'attr': {'class': 'btn btn-primary'}}) }}
        <a href="/recipeView/{{ recipeId }}" class="btn btn-primary">Anuluj</a>
        {{ form_end(CommentType)}}
    </div>
{% endblock %}